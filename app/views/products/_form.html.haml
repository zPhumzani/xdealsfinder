= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :company
    = f.text_field :company
  .field
    = f.label :category
    = f.text_field :category
  .field
    = f.label :subcategory
    = f.text_field :subcategory
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :weight_in_grams
    = f.text_field :weight_in_grams
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :available_quantity
    = f.number_field :available_quantity
  .field
    = f.label :expiry_date
    = f.datetime_select :expiry_date
  .field
    = f.label :latitude
    = f.text_field :latitude
  .field
    = f.label :longitude
    = f.text_field :longitude
  .field
    = f.label :online_order_available
    = f.check_box :online_order_available
  .field
    = f.label :tax_amount
    = f.text_field :tax_amount
  .field
    = f.label :image
    = f.text_field :image
  .actions
    = f.submit 'Save'
